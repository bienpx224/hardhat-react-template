{
  "name": "hardhat-waffle-ethers-ts-react-template",
  "version": "1.0.0",
  "description": "Hardhat+Waffle+Ethers+Typescript+ReactJS template to compile and test a Solidity Smart Contract",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:rinkeby": "hardhat test --network rinkeby",
    "test:gas": "GAS_REPORT=TRUE hardhat test",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:rinkeby": "hardhat run scripts/deploy.js --network rinkeby",
    "prettier": "prettier --write 'contracts/**/*.sol' --tab-width 2",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test:react": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "keywords": [
    "hardhat",
    "waffle",
    "ethers",
    "typescript",
    "react",
    "solidity"
  ],
  "author": "Miquel A. Cabot",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@typechain/ethers-v5": "^6.0.5",
    "@types/chai": "^4.2.16",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "chai": "^4.3.4",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.1.0",
    "hardhat": "^2.1.2",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-typechain": "^0.3.5",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "solidity-coverage": "^0.7.16",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.3",
    "typescript": "^4.2.3",
    "web-vitals": "^1.0.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
