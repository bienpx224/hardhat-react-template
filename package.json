{
  "name": "hardhat-waffle-ethers-ts-react-template",
  "version": "1.0.0",
  "description": "Hardhat+Waffle+Ethers+Typescript+ReactJS template to compile and test a Solidity Smart Contract",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:rinkeby": "hardhat test --network rinkeby",
    "test:gas": "GAS_REPORT=TRUE hardhat test",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy:rinkeby": "hardhat run scripts/deploy.ts --network rinkeby",
    "prettier": "prettier --write 'contracts/**/*.sol' --tab-width 2",
    "start": "cd frontend && yarn start",
    "build": "cd frontend && yarn build",
    "test:react": "cd frontend && yarn test",
    "eject": "cd frontend && yarn eject"
  },
  "keywords": [
    "hardhat",
    "waffle",
    "ethers",
    "typescript",
    "react",
    "solidity"
  ],
  "author": "Miquel A. Cabot",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^6.0.5",
    "@types/chai": "^4.2.16",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "chai": "^4.3.4",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.1.0",
    "hardhat": "^2.1.2",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-typechain": "^0.3.5",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.7",
    "solidity-coverage": "^0.7.16",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.3",
    "typescript": "^4.2.3"
  }
}
